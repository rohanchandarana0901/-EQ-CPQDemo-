<aura:component implements="lightning:appHomeTemplate">
	<aura:attribute name="column1" type="Aura.Component[]" />
    <aura:attribute name="column2" type="Aura.Component[]" />
    <aura:attribute name="column3" type="Aura.Component[]" />
    <aura:attribute name="column4" type="Aura.Component[]" />
    <aura:attribute name="column5" type="Aura.Component[]" />
    <aura:attribute name="column6" type="Aura.Component[]" />
    <aura:attribute name="column7" type="Aura.Component[]" />
    <aura:attribute name="column8" type="Aura.Component[]" />
    
    <div style="margin-top: -10px;">
        <lightning:layout horizontalAlign="spread" verticalAlign="stretch" pullToBoundary="small">
            <lightning:layoutItem size="2.4" class="paddingleft75rem width20per" flexibility="auto">{!v.column1}</lightning:layoutItem>
            <lightning:layoutItem size="2.4" class="paddingleft7px width20per" flexibility="auto">{!v.column2}</lightning:layoutItem>
            <lightning:layoutItem size="2.4" class="paddingleft7px width20per" flexibility="auto">{!v.column3}</lightning:layoutItem>
            <lightning:layoutItem size="2.4" class="paddingleft7px width20per" flexibility="auto">{!v.column4}</lightning:layoutItem>
            <lightning:layoutItem size="2.4" class="paddingleft7px paddingright75rem width20per" flexibility="auto">{!v.column5}</lightning:layoutItem>
        </lightning:layout>
        <lightning:layout horizontalAlign="spread" class="paddingleft75rem paddingright75rem paddingtop7px" verticalAlign="stretch" pullToBoundary="small">
            <lightning:layoutItem size="4" class="actionpaddingleft actionpaddingtop width20per" flexibility="auto">{!v.column6}</lightning:layoutItem>
            <lightning:layoutItem size="4" class="actionpaddingtop width20per" flexibility="auto">{!v.column7}</lightning:layoutItem>
            <lightning:layoutItem size="4" class="actionpaddingright actionpaddingtop width20per" flexibility="auto">{!v.column8}</lightning:layoutItem>
        </lightning:layout>
    </div>
</aura:component>